<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %level %logger{36} [%L] - %msg%n" />
		</Console>
		<!-- <File name="MyFile" fileName="logs/app.log"> <PatternLayout pattern="%d 
			%level %logger{36} - %msg%n"/> </File> -->
	</Appenders>

	<Loggers>
		<Logger name="org.springframework" level="error" />
		<Logger name="minami.com.echplus" level="debug" />
		<Logger name="org.springframework.boot.context.embedded.tomcat" level="info" />
		
		<Root level="error">
			<AppenderRef ref="Console" />
			<!-- <AppenderRef ref="MyFile" level="trace" /> -->
		</Root>
	</Loggers>
</Configuration>